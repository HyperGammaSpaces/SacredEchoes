Ch1_7x_BeginningScene:
	MUSC SongID_Env_Birds
	CLEA 0x0

	REMU Alm
	REMU Lukas
	REMU Gray
	REMU Tobin
	REMU Kliff
	REMU Faye
	REMU Silque
	REMU Clair
	REMU Acantha
	
	LOAD2 0x0 Ch1_7x_Units1 //0x0 instead of 0x1 seems to be for allies on maps with prep screens
	ENUN
	LOAD1 0x1 LoadFernandMathilda
	ENUN
	CAMERA_CENTERED Clive
	
	FADU 2
	BROWNBOXTEXT Ch1_7x_BrownboxText [8,8]
	FlashCursor(Clive, 60)
	
	SetBackground(0x26)
	Text(Ch1_7x_OpeningText)
	ClearBackground
	
	STAL 20
	CAMERA_CENTERED [12, 18]
	EVBIT_T 0x9
	//Boss walks in
	LOAD1 0x1 Enemy_Envoy
	ENUN
	EVBIT_F 0x9
	CAMERA_CENTERED Zopyrus
	STAL 20
	
	SetBackground(0x26)
	Text(Ch1_7x_BossIntro)
	ClearBackground

	//Enemy ambush
	MUSC SongID_Tension
	CAMERA_CENTERED [12, 11]
	CUSE Zopyrus
	SVAL 0xB Coords(15,9)
	CUSE 0xFFFE
	SVAL 0xB Coords(15,11)
	CUSE 0xFFFE
	LOAD1 0x1 EnemyUnits
	ENUN

	Text(Ch1_7x_EnemiesAppear)
	NoFade
	ENDA

Ch1_7x_EndingScene:
    CALL EndMusicAndMMS
	CALL UnifiedBEXPCaller
	FADI 5
    STAL 5
    RemoveItemFromUnit(FernandPlayable,BaseLance)
    RemoveItemFromUnit(Mathilda,BaseLance)
    DumpToConvoy(FernandPlayable)
    DumpToConvoy(Mathilda)

	REVEAL Alm
	REVEAL Lukas
	REVEAL Gray
	REVEAL Tobin
	REVEAL Silque
	REVEAL Clair
	REVEAL Acantha

//special
	CHECK_EVENTID gKliffRecruited
	BEQ 0xA 0xC 0x0
		REVEAL Kliff
		GOTO 0xB
	LABEL 0xA
		REMU Kliff
	LABEL 0xB
	CHECK_EVENTID gFayeRecruited
	BEQ 0xC 0xC 0x0
		REVEAL Faye
		GOTO 0xD
	LABEL 0xC
		REMU Faye

	LABEL 0xD
	DISA FernandPlayable
	DISA Mathilda

//Uncomment when re-enabling

	MUSC SongID_Uprising
	SetBackground(0x25)
	Text(Ch1_7x_EndingText)
	MUSCMID SongID_Silence
	FADI 2
	MNCH 0x07 //go to ch7
ENDA
