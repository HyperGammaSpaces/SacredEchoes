Ch2_5_BeginningScene:
	LOAD3 0x0 PlayerUnits 
	ENUN
	FADU 5
	MUSC SongID_Env_Water
	STAL 20
	
	SetBackground(0x41) //nightboat
	CHECK_ALIVE Valbar
	BEQ 0x100 0xC 0x0
		CHECK_ALIVE Leon
		BEQ 0x100 0xC 0x0
			TEXTMODE 1
            TEXTSHOW Ch2_5_OpeningText
            TEXTEND
            TEXTCLEAR
			GOTO 0x101
	LABEL 0x100
	TEXTMODE 1
    TEXTSHOW Ch2_5_OpeningText_NoValbar
    TEXTEND
    TEXTCLEAR
	
	LABEL 0x101
    ClearBackgroundSmooth
	MUSC SongID_FromTheDarkness
	CAMERA_CENTERED [12,0]
	EARTHQUAKE_START 0x100
	STAL 30
	FADI 16
	STAL 30
	EARTHQUAKE_END
	TILECHANGE 0x0 // Boat
