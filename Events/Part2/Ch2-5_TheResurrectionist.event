	NoFade
	ENDA
	
LoadSummons: //every other turn, shamelessly stolen from VBA for now lol
	CHECK_EVENTID 0x2
	BNE 0x0 0xc 0x0 //stop if boss killed
	CHECK_TURNS //store current turn to slot c
	//Now get TEXTCLEARinder mod 2
	SMOV r1 0x2
	SDIV slotsParam(r2, rC, r1) //r2 = rC/2
	SMUL slotsParam(r1, r2)     //r1 = r2*2
	SSUB slotsParam(r1, rC, r1) //r1 -= rC, r1 = TEXTCLEARinder
	BNE 0x0 r1 0
	CAMERA_CENTERED CantorBoss_Celica5
	ENUN
	FlashCursor(CantorBoss_Celica5, 60)
	SOUN 0x3BF //summoning SFX
	STAL 20
	LoadReinforcements(ZombieGroup) //TEXTCLEARinder was 0 (right)
	LABEL 0x0
	NoFade
	ENDA

Ch2_5_EndingScene:
    MUSCMID SongID_Silence
