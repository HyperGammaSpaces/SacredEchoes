    TEXTEND
    MOVE 0x10 RineaEnemy [15,4]
    ENUN
    TEXTCONT
    TEXTEND
    MOVE 0x10 RineaEnemy [25,5]
    MOVE 0x10 FernandPaladin [24,5]
    ENUN
    DISA FernandPaladin
    DISA RineaEnemy
    TEXTCONT
    TEXTEND
    TEXTCLEAR
    FADI 2
    
    CLEA 0x0
