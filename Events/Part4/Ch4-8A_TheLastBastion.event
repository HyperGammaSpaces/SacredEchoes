    LOAD1 0x1 EnemyUnits
    ENUN
    LOAD3 0x0 PlayerPlacement 
	ENUN
    GotoPrepScreen
	ENDA

Ch4A8_EndingScene:
	CALL UnifiedBEXPCaller
	MUSCMID SongID_Silence
	FADI 2
	EVBIT_MODIFY 0x1
	ENUT gChapter4A8Completed
	EVBIT_MODIFY 0x0
    
    MUSC SongID_CastleTheme
    SetBackground(0x0C, 5)
    CHECK_EXISTS Mathilda
	BEQ 0x901 rC r0
	CHECK_ALIVE Mathilda
	BEQ 0x901 rC r0
        BackgroundText(Ch4A_8_EndingText)
        GOTO 0x902
    LABEL 0x901
    BackgroundText(Ch4A_8_EndingText_NoMathilda)
    LABEL 0x902
    MUSCMID SongID_Silence
	FADI 2
	MNCH 0x2C
	ENDA
