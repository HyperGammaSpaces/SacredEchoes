		SetBackground(0x49, 16)
		TEXTMODE 1
		TEXTSHOW Ch4A_7_VillageRight_Alm
		TEXTEND
		MUSCMID SongID_Silence
		TEXTCONT
		TEXTEND
		MUSCSLOW SongID_DistantPromise
		TEXTCONT
		TEXTEND
