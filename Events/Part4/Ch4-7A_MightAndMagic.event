		FADEIN 2
		CLEAN
		CALL $591F40
		CONFIG_SKIP 0x1
		MUSCMID SongID_Silence
		SMOV 0x3 SpeedRing
		GIVEITEM 0xFFFF
		MUSIC SongID_WhatLiesAtTheEnd
		TILECHANGE 0x05
		CONFIG_SKIP 0x0
		STAL 20
	LABEL 0x202
	EVBIT_T 0x7
	END

