Ch3_4C_BeginningScene:
	MUSC SongID_LandOfShiftingSand
	LOAD1 0x1 EnemyUnitsSonya
	ENUN
	FADU 5
	WEA1 0x6

	//due to sandstorm, load units on map.
	LOAD2 0x1 Ch3_4C_CutsceneUnits
	ENUN
	STAL 20
	FlashCursor(Celica,60)
	STAL 20

	SetBackground(0x30)
	CHECK_ALIVE Catria
	BEQ 0x2 0xC 0x0
		Text(Ch3_4C_OpeningText_SonyaChosen_Catria)
		GOTO 0x3
	LABEL 0x2
		Text(Ch3_4C_OpeningText_SonyaChosen)
	LABEL 0x3
	FADI 5
	CLEA 0x0
	
	#ifdef __DEBUG__
		LOAD1 0x1 Ch3_4C_UnitsNorth
		ENUN
	#else
		LOAD3 0x0 Ch3_4C_UnitsNorth 
		ENUN
		GotoPrepScreen
	#endif
	ENDA


Ch3_4C_EndingScene:
	CALL UnifiedBEXPCaller
	FADI 2
	EVBIT_MODIFY 0x1
	ENUT gChapter3C4Completed
	EVBIT_MODIFY 0x0
	MUSC SongID_Victory
	SetBackground(0x30)
	Text(Ch3_4C_EndingText)
	FADI 5
	SetBackground(0x4C)
	Text(Ch3_4C_EndingText_DeenRetreats)
	FADI 5
	MNCH 0x1B
	ENDA
