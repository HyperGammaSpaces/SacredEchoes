	CALL UnifiedBEXPCaller
	FADI 2
	EVBIT_MODIFY 0x1
	ENUT gChapter3A6Completed
	EVBIT_MODIFY 0x0
	MUSC 0x31
	SetBackground(0x1D)
	Text(Ch3_6A_EndingText)
	
	//scene change
	FADI 2
	MUSC 0x7FFF
	SetBackground(0x0E)
	TEXTSTART
