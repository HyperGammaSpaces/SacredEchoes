    BEQ 0x201 0xC 0x0
        //all here
		SVAL 0x2 Ch5_2_RoyalVault_1
		GOTO 0x203
    LABEL 0x201
        //no clair
		SVAL 0x2 Ch5_2_RoyalVault_1_NoClair
		GOTO 0x203
	LABEL 0x200
    //no gray
