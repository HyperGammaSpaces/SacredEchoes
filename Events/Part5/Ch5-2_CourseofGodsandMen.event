    BEQ 0x202 0xC 0x0
        //clair here
		SVAL 0x2 Ch5_2_RoyalVault_1_NoGray
        GOTO 0x203
    LABEL 0x202
        //neither here
        SVAL 0x2 Ch5_2_RoyalVault_1_NoGrayClair
	LABEL 0x203
    
    TEXTMODE 1
    TEXTSHOW 0xFFFF
    TEXTEND
    FAWI 16
    SOUN 0x2E9
    STAL 5
    FAWU 5
    TEXTCONT
    TEXTEND
