    STAL 20
    CameraCursor(JedahCutsceneUnit)
    SetBackground(0x2D)
    TEXTMODE 1
    TEXTSHOW Ch5_2_MilaAltar_5
    TEXTEND
    MUSCMID SongID_Silence
    FAWI 16
    SOUN 0x101
    STAL 5
    FAWU 2
    TEXTCONT
    TEXTEND
    MUSC SongID_ImportantBattle
    TEXTCONT
    TEXTEND
    TEXTCLEAR
    MUSCMID SongID_Silence
    FADI 2
    CLEAN
    REMU Celica
    CLEA 0x0
    CLEE 0x0
    STAL 20
    
    //LOMA back to 0x2E at [9,24]. Fade in. Load cutscene allies
    SVAL 0xB Coords(9,24)
    LOMA 0x2E
    MUSC SongID_Env_LegendaryWeapon
    FADU 2
    LOAD2 0x0 CutsceneUnits_Alm
    ENUN
    STAL 20
    CameraCursor(Alm)
    FADI 5
    SetBackground(0x2A,5)
    
    //tbh just use SVAL to display the conditional text
