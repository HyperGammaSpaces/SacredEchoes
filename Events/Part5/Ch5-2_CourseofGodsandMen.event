		GOTO 0x103
    LABEL 0x101
        //no clair
		SVAL 0x2 Ch5_2_MilaAltar_3_NoClair
		GOTO 0x103
	LABEL 0x100
    //no ram kids
    CHECK_ALIVE Clair
    BEQ 0x102 0xC 0x0
        //clair here
		SVAL 0x2 Ch5_2_MilaAltar_3_NoGray
        GOTO 0x103
    LABEL 0x102
        //neither here
        SVAL 0x2 Ch5_2_MilaAltar_3_NoGrayClair
	LABEL 0x103
    TEXTMODE 1
    TEXTSHOW 0xFFFF
    TEXTEND
    MUSCMID SongID_Unity
    TEXTCONT
    TEXTEND
    FAWI 16
    SOUN 0x2E9
    STAL 5
    FAWU 5
    TEXTCONT
    TEXTEND
    TEXTCLEAR
	MUSCMID SongID_Silence
    FADI 2
    STAL 5
    MUSC SongID_Env_LegendaryWeapon
    SetBackground(0x17, 2)
    BackgroundText(Ch5_2_MilaAltar_4)
    MUSCMID SongID_Silence
    FADI 2
    STAL 5
    //LOMA to 0x28 at [9,5] and do tilechange 0x0 before fade-in
