Ch5F2_EndingScene:
    CALL EndMusicAndMMS
	CALL UnifiedBEXPCaller
	FADI 2
    STAL 5
    CLEA 0x0
    CLEE 0x0
	RemoveTrapAtCoords(20,15)
    MUSC SongID_Env_LegendaryWeapon
    SetBackground(0x2C,5)
    TEXTMODE 1
    TEXTSHOW Ch5_2_EndingText
    TEXTEND
    SOUN 0x2D9 //thud
    TEXTCONT
    TEXTEND
    MUSC SongID_Omen
    TEXTCONT
    TEXTEND
    TEXTCLEAR
    FADI 5
    CLEAN
    CAMERA_CENTERED [20,15]
    
    LOAD2 0x0 CutsceneUnits_End_Alm
    ENUN
    FADU 2
    STAL 20
    LOAD1 0x1 CutsceneUnits_End_Jedah
    ENUN
    FlashCursor(JedahCutsceneUnit, 60)
    TEXTMODE 0
    TEXTSHOW Ch5_2_EndingText_2
    TEXTEND
    MUSC SongID_ImportantBattle
    TEXTCONT
    TEXTEND
    TEXTCLEAR
    
    //MOVE Alm towards Jedah
    //Stop suddenly
    MOVE 0x18 Alm [20,14]
    ENUN
    //TODO: show the "!" bubble?
    EARTHQUAKE_START 0x100
    STAL 60
    FADI 5
    EARTHQUAKE_END
    
    SetBackground(0x2C,5)
    TEXTMODE 1
    TEXTSHOW Ch5_2_EndingText_3
    TEXTEND
    TEXTCLEAR
    CALL $591F40
	SMOV 0x3 Falchion
	GIVEITEMTO Alm
    FADI 16
    CLEAN
    FADU 16
    
    //Scripted battle
    MOVE 0x18 Alm [21,14]
    ENUN
    StartBattle
    SetBattleNumbers(83,16,61,53,35,0)
    CriticalHit(0,48)
    EndAttack
    FIG1 Alm JedahCutsceneUnit Falchion
    
    CHECK_ALIVE JedahCutsceneUnit
    BEQ 0x300 0xC 0x0
        FlashCursor(JedahCutsceneUnit, 60)
        Text(Ch5_2_EndingText_4)
        SVAL 0x2 JedahCutsceneUnit
        CALL Warp_Out_Effect
    LABEL 0x300
    STAL 20
    MOVE 0x18 Alm [20,14]
    ENUN
    MUSCMID SongID_Silence
    STAL 20
    FADI 5
    
    SetBackground(0x2C,5)
    TEXTMODE 1
    TEXTSHOW Ch5_2_EndingText_5
    TEXTEND
    MUSC SongID_Unity
    TEXTCONT
    TEXTEND
    FadeOutMusic
    STAL 20
    MUSCSLOW SongID_MilaStatue
    TEXTCONT
    TEXTEND
    MUSCSLOW SongID_Silence
    TEXTCONT
    TEXTEND
    MUSC SongID_Unity
    TEXTCONT
    TEXTEND
    TEXTCLEAR
    
	MUSCMID SongID_Silence
	FADI 2
    
    //Now unite the two parties
    ENUT gConvoyMergeEnabled
    SETVAL 1 0x00000201
    SHORT $0D40 $0; POIN CombineConvoyPartitionsASMC|1
    REVEAL Celica
    REVEAL Mae
    REVEAL Boey
    REVEAL Genny
    REVEAL Saber
    REVEAL Valbar
    REVEAL Leon
    REVEAL Kamui
    REVEAL Atlas
    REVEAL Hyas
    REVEAL Jesse
    REVEAL Palla
    REVEAL Catria
    REVEAL Est
    CHECK_EVENTID gKliffRecruited
    BNE 0x1337 0x0 0xC
        REVEAL Kliff
    LABEL 0x1337
    CHECK_EVENTID gFayeRecruited
    BNE 0x1338 0x0 0xC
        REVEAL Faye
    LABEL 0x1338
    CHECK_EVENTID gFightSonyaChosen
    BEQ 0x1339 0x0 0xC
        REVEAL Deen
        GOTO 0x133A
    LABEL 0x1339
